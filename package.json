{
  "name": "researcher-webextension",
  "displayName": "RE:SEARCHER",
  "description": "RE:SEARCHER is a personal search engine for your bookmarks.",
  "version": "0.9.1",
  "author": "andots",
  "license": "MIT",
  "homepage": "https://github.com/andots/researcher-webextension",
  "repository": {
    "type": "git",
    "url": "git@github.com:andots/researcher-webextension.git"
  },
  "bugs": {
    "url": "https://github.com/andots/researcher-webextension/issues"
  },
  "keywords": [
    "search",
    "bookmarks",
    "fulltext-search",
    "elasticsearch",
    "react",
    "preact",
    "webextension"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:prepare build:web build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build --config vite.config.ts",
    "build:js": "vite build --config vite.config.content.ts",
    "test": "node --experimental-vm-modules jest.js",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint src/**/*.{json,ts,tsx,js}",
    "pack": "web-ext build --artifacts-dir=./build --source-dir=./extension --overwrite-dest --no-config-discovery"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@preact/preset-vite": "^2.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/preact": "^2.0.1",
    "@types/dompurify": "^2.2.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/react": "^17.0.24",
    "@types/react-router-dom": "^5.3.0",
    "@types/react-window": "^1.8.5",
    "@types/redux-persist-webextension-storage": "^1.0.0",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^1.1.4",
    "esno": "^0.9.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.1",
    "jest-webextension-mock": "^3.7.19",
    "kolorist": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.14",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redux": "^4.1.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-visualizer": "^5.5.2",
    "sass": "^1.42.1",
    "ts-jest": "^27.0.5",
    "tsup": "^5.1.0",
    "typescript": "^4.4.3",
    "vite": "^2.5.10",
    "web-ext": "^6.5.0",
    "webext-bridge": "^5.0.0",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.14.1",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@mozilla/readability": "^0.4.1",
    "@mui/icons-material": "^5.0.1",
    "@mui/lab": "^5.0.0-alpha.48",
    "@mui/material": "^5.0.1",
    "@reduxjs/toolkit": "^1.6.1",
    "buffer": "^6.0.3",
    "clsx": "^1.1.1",
    "deepmerge": "^4.2.2",
    "dompurify": "^2.3.3",
    "escape-goat": "^4.0.0",
    "highlight.js": "^11.2.0",
    "i18next": "^21.0.1",
    "i18next-browser-languagedetector": "^6.1.2",
    "interweave": "^12.8.0",
    "p-limit": "^4.0.0",
    "react-i18next": "^11.12.0",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "react-use": "^17.3.1",
    "react-window": "^1.8.6",
    "redux-persist": "^6.0.0",
    "redux-persist-webextension-storage": "^1.0.2",
    "serialize-error": "^8.1.0",
    "tree-model": "^1.0.7"
  }
}
