{
  "name": "researcher-webextension",
  "displayName": "RE:SEARCHER",
  "description": "RE:SEARCHER is a personal search engine for your bookmarks.",
  "version": "0.9.9",
  "author": "andots",
  "license": "MIT",
  "homepage": "https://github.com/andots/researcher-webextension",
  "repository": {
    "type": "git",
    "url": "git@github.com:andots/researcher-webextension.git"
  },
  "bugs": {
    "url": "https://github.com/andots/researcher-webextension/issues"
  },
  "keywords": [
    "search",
    "bookmarks",
    "fulltext-search",
    "elasticsearch",
    "react",
    "preact",
    "webextension"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:prepare build:web build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build --config vite.config.ts",
    "build:js": "vite build --config vite.config.content.ts",
    "zip": "run-s zip:webext zip:archive",
    "zip:webext": "web-ext build --artifacts-dir=./build --source-dir=./extension --overwrite-dest --no-config-discovery",
    "zip:archive": "git archive --format=zip --output=./build/source.zip HEAD",
    "test": "node --experimental-vm-modules jest.js",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint src/**/*.{json,ts,tsx,js}",
    "release": "run-s build zip"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@preact/preset-vite": "^2.1.5",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/preact": "^2.0.1",
    "@types/dompurify": "^2.3.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.36",
    "@types/react-router-dom": "^5.3.2",
    "@types/react-window": "^1.8.5",
    "@types/redux-persist-webextension-storage": "^1.0.0",
    "@types/webextension-polyfill": "^0.8.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "esno": "^0.9.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.3.1",
    "jest-webextension-mock": "^3.7.19",
    "kolorist": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.15",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redux": "^4.1.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-visualizer": "^5.5.2",
    "sass": "^1.43.4",
    "ts-jest": "^27.0.7",
    "tsup": "^5.7.4",
    "typescript": "^4.5.2",
    "vite": "^2.6.14",
    "web-ext": "^6.5.0",
    "webext-bridge": "^5.0.1",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.15.0",
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@mozilla/readability": "^0.4.1",
    "@mui/icons-material": "^5.1.1",
    "@mui/lab": "^5.0.0-alpha.55",
    "@mui/material": "^5.1.1",
    "@reduxjs/toolkit": "^1.6.2",
    "buffer": "^6.0.3",
    "clsx": "^1.1.1",
    "deepmerge": "^4.2.2",
    "dompurify": "^2.3.3",
    "escape-goat": "^4.0.0",
    "highlight.js": "^11.3.1",
    "i18next": "^21.5.2",
    "i18next-browser-languagedetector": "^6.1.2",
    "interweave": "^12.9.0",
    "p-limit": "^4.0.0",
    "react-i18next": "^11.14.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "react-use": "^17.3.1",
    "react-window": "^1.8.6",
    "redux-persist": "^6.0.0",
    "redux-persist-webextension-storage": "^1.0.2",
    "serialize-error": "^8.1.0",
    "tree-model": "^1.0.7"
  }
}
